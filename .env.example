# Flask Configuration
FLASK_ENV=development
SECRET_KEY=change-me-in-production-to-random-string

# Database
DATABASE_URL=sqlite:///data/db.sqlite3
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/plannerx

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_STARTTLS=true
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=PlannerX <no-reply@plannerx.local>

# Firebase Authentication
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_EMULATOR_HOST=
FIREBASE_ALLOWED_ISSUER=https://securetoken.google.com/your-project-id

# SMS (Optional - Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=


# OpenAI API
OPENAI_API_KEY=your-openai-key

# Scheduler
DIGEST_HOUR=7
DIGEST_MINUTE=0
TIMEZONE=Europe/Prague
